@model List<LibreriasReto.DTO.RecepcionDTO>;

<h2 class="mb-3">Mantenimiento Recepciones</h2>
<div style="display: flex">
    <a asp-controller="Recepcion" asp-action="Create" class="btn btn-success mb-3 d-flex align-items-center">
        <span class="me-1">Nuevo</span>
        <span class="material-symbols-outlined">add</span>
    </a>
    <a asp-controller="Recepcion" asp-action="Filter" class="btn btn-primary mb-3 ms-3 d-flex align-items-center">
        <span class="me-1">Historial</span>
        <span class="material-symbols-outlined">history_toggle_off</span>
    </a>
</div>
@if(ViewBag.MENSAJE != null){

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Libro</th>
                <th>Cantidad</th>
                <th>FechaIngreso</th>
                <th style="text-align: center" colspan="2">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="6" style="text-align:center"><h3>@ViewBag.MENSAJE</h3></td>
            </tr>
        </tbody>
    </table>

    <div class="reporte my-4">
        <h5>Ingresos registrados la última semana: <strong>@ViewBag.ReporteSemanal</strong></h5>
        <h5>Ingresos registrados el último mes: <strong>@ViewBag.ReporteMensual</strong></h5>
        <h5>Ingresos totales registrados: <strong>@ViewBag.ReporteTotal</strong></h5>
    </div>

}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Libro</th>
                <th>Cantidad</th>
                <th>FechaIngreso</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdRecepcion</td>
                    <td>@item.nombreLibro</td>
                    <td>@item.Cantidad</td>
                    <td>@item.FechaIngreso</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="reporte my-4" style="color:#232323">
        <h5>Ingresos registrados la última semana: <strong>@ViewBag.ReporteSemanal</strong></h5>
        <h5>Ingresos registrados el último mes: <strong>@ViewBag.ReporteMensual</strong></h5>
        <h5>Ingresos totales registrados: <strong>@ViewBag.ReporteTotal</strong></h5>
    </div>
    
}


