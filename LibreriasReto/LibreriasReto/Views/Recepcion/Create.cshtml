@model LibreriasReto.DTO.RecepcionDTO;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo Libro</h2>
        <form asp-controller="Recepcion" asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="IdLibro">Libro</label>
                <select asp-for="IdLibro" asp-items="@ViewBag.LIBROS" class="form-select"></select>
            </div>
            <div class="mb-3">
                <label>Cantidad</label>
                <input class="form-control" asp-for="Cantidad" type="text" required />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Fecha</label>
                <input class="form-control" asp-for="FechaIngreso" type="date" required />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Registrar</button>
                <a asp-controller="Recepcion" asp-action="Lista" style="border: 1px solid blue;" class="btn">Volver</a>
            </div>
        </form>
    </div>
</div>

<h1>@ViewBag.MENSAJE</h1>
