@model List<LibreriasReto.DTO.RecepcionDTO>;

<h2 class="mb-3">Historial de Recepciones</h2>
<div style="display: flex; margin-left:-24px" class="my-4">
    <form asp-controller="Recepcion" asp-action="Filter" method="post" class="ms-4">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <label name="Nombre libro"></label>
        <input name="nombre" type="text" placeholder="Ingresar nombre" class="ms-2" />
        <label name="fecha inicio"></label>
        <input name="fechaInicio" type="date" class="ms-2" />
        <label name="fecha fin"></label>
        <input name="fechaFin" type="date" class="ms-2" />
    </form>
</div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Libro</th>
                <th>Cantidad</th>
                <th>FechaIngreso</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdRecepcion</td>
                    <td>@item.nombreLibro</td>
                    <td>@item.Cantidad</td>
                    <td>@item.FechaIngreso</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="botones-recepcion">
        <a style="display:flex; width:170px; color:#198754; border:1px solid #198754" class="enlace" asp-action="ExportarExcel">
            <span class="material-symbols-outlined">
                description
            </span> Exportar a Excel
        </a>
        <a asp-controller="Recepcion" asp-action="Lista" style="border: 1px solid blue;" class="btn">Volver</a>
    </div>
<div class="reporte my-4">
    <h5>Ingresos registrados la última semana: <strong>@ViewBag.ReporteSemanal</strong></h5>
    <h5>Ingresos registrados el último mes: <strong>@ViewBag.ReporteMensual</strong></h5>
    <h5>Ingresos totales registrados: <strong>@ViewBag.ReporteTotal</strong></h5>
</div>


<style>
    .botones-recepcion{
        display: flex;
        gap: 20px
    }

    .enlace {
        display: inline-block;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        text-align: center;
        text-decoration: none;
        vertical-align: middle;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        border-radius: 0.25rem;
    }

        .enlace:hover {
            background-color: #198754;
            color: white !important;
        }
</style>

