@model LibreriasReto.DTO.ClienteDTO;

<h2>Esta seguro que deseas eliminar al cliente: </h2>

<div class="row">
    <div class="col-sm-8 offset-ms-2">
        <form asp-controller="Cliente" asp-action="Delete" method="post">
            <div class="mb-3">
                <label>ID</label>
                <input class="form-control" asp-for="IdCliente" type="number" value="@Model.IdCliente" readonly />
            </div>
            <div class="mb-3">
                <label>DNI</label>
                <input class="form-control" asp-for="Dni" value="@Model.Dni" readonly />
            </div>
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="Nombre" type="text" value="@Model.Nombre" readonly />
            </div>
            <div class="mb-3">
                <label>Apellido Completo</label>
                <input class="form-control" asp-for="Apellido" type="text" value="@Model.Apellido" readonly />
            </div>
            <div class="mb-3">
                <button class="btn btn-danger" type="submit">Desactivar</button>
                <a asp-controller="Cliente" asp-action="Lista" style="border: 1px solid blue;" class="btn">Volver</a>
            </div>
        </form>
    </div>
</div>
