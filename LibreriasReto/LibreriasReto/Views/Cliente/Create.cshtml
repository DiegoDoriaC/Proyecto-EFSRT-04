@{
}
@model LibreriasReto.DTO.ClienteDTO;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo Cliente</h2>
        <form asp-controller="Cliente" asp-action="Create" method="post">
            <div class="mb-3">
                <label>DNI</label>
                <input class="form-control" asp-for="Dni" type="number" />
            </div>
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-3">
                <label>Apellido Completo</label>
                <input class="form-control" asp-for="Apellido" type="text" />
            </div>
            <div class="mb-4">
                <label>Estado</label>
                <input class="form-control" asp-for="EsActivo" type="text" value="1" readonly hidden />
                <input class="form-control" value="Activo" readonly />
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Registrar</button>
                <a asp-controller="Cliente" asp-action="Lista" style="border: 1px solid blue;" class="btn">Volver</a>
            </div>
        </form>
    </div>
</div>

<h1>@ViewBag.MENSAJE</h1>