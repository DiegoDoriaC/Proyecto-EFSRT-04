@using Microsoft.AspNetCore.Identity;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] LibreriasReto</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibreriasReto.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LibreriasReto</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ms-2 me-3"><a class="nav-link text-dark" asp-area="" asp-controller="Comprobante" asp-action="Create">Vender</a></li>
                        <li class="nav-item me-3"><a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="lista">Cliente</a></li>                        
                        <li class="nav-item me-3"><a class="nav-link text-dark" asp-area="" asp-controller="Libro" asp-action="lista">Libros</a></li>
                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item me-3"><a class="nav-link text-dark" asp-area="" asp-controller="Empleado" asp-action="lista">Empleado</a></li>
                            <li class="nav-item me-3"><a class="nav-link text-dark" asp-area="" asp-controller="Area" asp-action="lista">Areas</a></li>
                            <li class="nav-item me-3"><a class="nav-link text-dark" asp-area="" asp-controller="Genero" asp-action="lista">Generos</a></li>
                            <li class="nav-item me-3"><a class="nav-link text-dark" asp-area="" asp-controller="Recepcion" asp-action="lista">Recepciones</a></li>
                            <li class="nav-item me-3"><a class="nav-link text-dark" asp-area="" asp-controller="Comprobante" asp-action="Reportes">Reportes Ventas</a></li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <span style="margin-top:7px" class="me-4"><strong>Usuario: @(User.Identity.Name)</strong></span>
                        <li class="nav-item d-flex align-items-center">
                            <a class="btn btn-danger d-flex align-items-center" asp-area="" asp-controller="Acceso" asp-action="Logout">
                                <span class="me-2">Salir</span>
                                <span class="material-symbols-outlined">logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - LibreriasReto - <a asp-area="" asp-controller="Home" asp-action="Privacy">Politicas de privacidad</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
