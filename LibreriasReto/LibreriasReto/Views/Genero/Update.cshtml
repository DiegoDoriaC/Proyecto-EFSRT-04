@model LibreriasReto.DTO.GeneroDTO;

<div class="row">
    <div class="col-sm-8 offset-ms-2">
        <h2>Editar Genero Literario</h2>
        <form asp-controller="Genero" asp-action="Update" method="post">
            <div class="mb-3">
                <label>ID</label>
                <input class="form-control" asp-for="IdGenero" type="number" value="@Model.IdGenero" readonly />
            </div>
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="Nombre" value="@Model.Nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Actualizar</button>
                <a asp-controller="Genero" asp-action="Lista" style="border: 1px solid blue;" class="btn">Volver</a>
            </div>
        </form>
    </div>
</div>
