@model LibreriasReto.DTO.EmpleadoDTO;

<h2>Esta seguro que deseas eliminar al empleado: </h2>

<div class="row">
    <div class="col-sm-8 offset-ms-2">
        <form asp-controller="Empleado" asp-action="Delete" method="post">
            <div class="mb-3">
                <label>ID</label>
                <input class="form-control" asp-for="IdEmpleado" type="number" value="@Model.IdEmpleado" readonly />
            </div>
            <div class="mb-3">
                <label>DNI</label>
                <input class="form-control" asp-for="Dni" type="number" value="@Model.Dni" readonly />
            </div>
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="Nombre" type="text" value="@Model.Nombre" readonly />
            </div>
            <div class="mb-3">
                <label>Apellido Completo</label>
                <input class="form-control" asp-for="Apellido" type="text" value="@Model.Apellido" readonly />
            </div>
            <div class="mb-3">
                <label>Telefono</label>
                <input class="form-control" asp-for="Telefono" type="number" value="@Model.Telefono" readonly />
            </div>
            <div class="mb-3">
                <label>Fecha Ingreso</label>
                <input class="form-control" asp-for="FechaIngreso" type="text" value="@Model.FechaIngreso.ToString()" readonly />
            </div>
            <div class="mb-3">
                <button class="btn btn-danger" type="submit">Desactivar</button>
                <a asp-controller="Empleado" asp-action="Lista" style="border: 1px solid blue;" class="btn">Volver</a>
            </div>
        </form>
    </div>
</div>
