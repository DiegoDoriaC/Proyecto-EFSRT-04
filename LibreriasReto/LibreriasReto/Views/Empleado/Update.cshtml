@model LibreriasReto.DTO.EmpleadoDTO;

<div class="row">
    <div class="col-sm-8 offset-ms-2">
        <h2>Editar Empleado</h2>
        <form asp-controller="Empleado" asp-action="Update" method="post">
            <div class="mb-3">
                <label>ID</label>
                <input class="form-control" asp-for="IdEmpleado" type="number" value="@Model.IdEmpleado" readonly />
            </div>
            <div class="mb-3">
                <label>Area</label>
                <select asp-for="IdArea" class="form-select">
                    <option value="1">Limpieza</option>
                    <option value="2">Vendedor</option>
                    <option value="3">Almacenero</option>
                    <option value="4">Seguridad</option>
                </select>
            </div>
            <div class="mb-3">
                <label>DNI</label>
                <input class="form-control" asp-for="Dni" type="number" value="@Model.Dni" />
            </div>
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="Nombre" type="text" value="@Model.Nombre" />
            </div>
            <div class="mb-3">
                <label>Apellido Completo</label>
                <input class="form-control" asp-for="Apellido" type="text" value="@Model.Apellido" />
            </div>
            <div class="mb-3">
                <label>Telefono</label>
                <input class="form-control" asp-for="Telefono" type="number" value="@Model.Telefono" />
            </div>
            <div class="mb-3">
                <label>Fecha Ingreso</label>
                <input onloadeddata="@Model.FechaIngreso" class="form-control" asp-for="FechaIngreso" type="date" value="@Model.FechaIngreso.ToString()" />
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input class="form-control" asp-for="Email" type="email" value="@Model.Email" />
            </div>
            <div class="mb-3">
                <label>Direccion</label>
                <input class="form-control" asp-for="Direccion" type="text" value="@Model.Direccion" />
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Actualizar</button>
                <a asp-controller="Empleado" asp-action="Lista" style="border: 1px solid blue;" class="btn">Volver</a>
            </div>
        </form>
    </div>
</div>
