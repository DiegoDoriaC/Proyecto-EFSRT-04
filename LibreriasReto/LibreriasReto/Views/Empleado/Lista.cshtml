@model List<LibreriasReto.DTO.EmpleadoDTO>;

<h2 class="mb-3">Mantenimiento Empleado</h2>
<div style="width:100%; display:flex; justify-content:space-between">
    <a asp-controller="empleado" asp-action="Create" class="btn btn-success mb-3 d-flex align-items-center">
        <span class="me-1">Nuevo</span>
        <span class="material-symbols-outlined">add</span>
    </a>
    <a asp-controller="empleado" asp-action="ListaDesactivados" class="desactivados mb-3 d-flex align-items-center">
        <span class="me-1">Empleados Inactivos</span>
        <span class="material-symbols-outlined">do_not_disturb_on</span>
    </a>    
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Area</th>
            <th>Dni</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Telefono</th>
            <th>FechaIngreso</th>
            <th>Email</th>
            <th>Direccion</th>
            <th style="text-align: center;" colspan="2">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nombreArea</td>
                <td>@item.Dni</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Telefono</td>
                <td>@item.FechaIngreso</td>
                <td>@item.Email</td>
                <td>@item.Direccion</td>
                <td style="text-align:center"><a style="text-decoration:none" asp-controller="Empleado" asp-action="Update" asp-route-id="@item.IdEmpleado">Editar</a></td>
                <td style="text-align:center"><a style="text-decoration:none" asp-controller="Empleado" asp-action="Delete" asp-route-id="@item.IdEmpleado">Desactivar</a></td>

            </tr>
        }
    </tbody>
</table>

<div>
    <a style="display:flex; width:170px; color:#198754; border:1px solid #198754" class="enlace" asp-action="ExportarExcel">
        <span class="material-symbols-outlined">
            description
        </span> Exportar a Excel
    </a>
</div>

