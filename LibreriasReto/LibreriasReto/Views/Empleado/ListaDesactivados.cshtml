@{
}

@model List<LibreriasReto.DTO.EmpleadoDTO>;

<h2 class="mb-3">Empleados Inactivos</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Area</th>
            <th>Dni</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Telefono</th>
            <th>FechaIngreso</th>
            <th>Email</th>
            <th>Direccion</th>
            <th style="text-align: center;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nombreArea</td>
                <td>@item.Dni</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Telefono</td>
                <td>@item.FechaIngreso</td>
                <td>@item.Email</td>
                <td>@item.Direccion</td>
                <td style="text-align:center"><a style="text-decoration:none" asp-controller="Empleado" asp-action="Active" asp-route-id="@item.IdEmpleado">Activar</a></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="empleado" asp-action="Lista" class="btn btn-primary mb-3">Volver</a>
</div>

<style>
    .enlace {
        display: inline-block;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        text-align: center;
        text-decoration: none;
        vertical-align: middle;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        border-radius: 0.25rem;
    }

        .enlace:hover {
            background-color: #198754;
            color: white !important;
        }
</style>


