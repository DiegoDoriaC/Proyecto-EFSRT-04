@model LibreriasReto.DTO.LibroDTO;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo Libro</h2>
        <form asp-controller="Libro" asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="IdGenero">Genero</label>
                <select asp-for="IdGenero" asp-items="@ViewBag.GENEROS" class="form-select"></select>
            </div>
            <div class="mb-3">
                <label>Libro</label>
                <input class="form-control" asp-for="Nombre" type="text" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Autor</label>
                <input class="form-control" asp-for="Autor" type="text" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Editorial</label>
                <input class="form-control" asp-for="Editorial" type="text" />
                <span asp-validation-for="Editorial" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Precio (soles)</label>
                <input class="form-control" asp-for="Precio" type="text" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Año Publicacion</label>
                <input class="form-control" asp-for="AnioPublicacion" type="text" />
                <span asp-validation-for="AnioPublicacion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Imagen</label>
                <input class="form-control" asp-for="urlImagen" type="text" placeholder="url" value="@Model.urlImagen" />
                <span asp-validation-for="urlImagen" class="text-danger"></span>
            </div>
                <input class="form-control" asp-for="Stock" type="hidden" value="0"/>
            <div class="mb-4">
                <label>Estado</label>
                <input class="form-control" asp-for="EsActivo" type="text" value="1" readonly hidden />
                <input class="form-control" value="Activo" readonly />
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Registrar</button>
                <a asp-controller="Libro" asp-action="Lista" style="border: 1px solid blue;" class="btn">Volver</a>
            </div>
        </form>
    </div>
</div>

<h1>@ViewBag.MENSAJE</h1>