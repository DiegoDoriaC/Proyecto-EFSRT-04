@model LibreriasReto.DTO.LibroDTO;

<div class="row">
    <div class="col-sm-8 offset-ms-2">
        <h2>Editar Libro</h2>
        <form asp-controller="Empleado" asp-action="Update" method="post">            
            <div class="mb-3">
                <label>Genero</label>
                <select class="form-select" asp-for="IdGenero">
                    <option value="1">...</option>
                    <option value="2">...</option>
                    <option value="3">...</option>
                    <option value="4">...</option>
                    <option value="5">...</option>
                    <option value="6">...</option>
                </select>
            </div>
            <div class="mb-3">
                <label>Libro</label>
                <input class="form-control" asp-for="IdLibro" type="text" value="@Model.Nombre"  />
            </div>
            <div class="mb-3">
                <label>Autor</label>
                <input class="form-control" asp-for="Autor" type="text" value="@Model.Autor"  />
            </div>
            <div class="mb-3">
                <label>Editorial</label>
                <input class="form-control" asp-for="Editorial" type="text" value="@Model.Editorial"  />
            </div>
            <div class="mb-3">
                <label>Precio</label>
                <input class="form-control" asp-for="Precio" type="number" value="@Model.Precio"  />
            </div>
            <div class="mb-3">
                <label>Publicacion</label>
                <input class="form-control" asp-for="AnioPublicacion" type="text" value="@Model.AnioPublicacion"  />
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Actualizar</button>
                <a asp-controller="Libro" asp-action="Lista" style="border: 1px solid blue;" class="btn">Volver</a>
            </div>
        </form>
    </div>
</div>
