@model List<LibreriasReto.DTO.LibroDTO>;

<h2 class="mb-3">Libros Inactivos</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Genero</th>
            <th>Libro</th>
            <th>Editorial</th>
            <th>Stock</th>
            <th style="text-align: center" colspan="1">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nombreGenero</td>
                <td>@item.Nombre</td>
                <td>@item.Editorial</td>
                <td class="stock"><strong>@item.Stock</strong></td>
                <td style="text-align:center"><a style="text-decoration:none" asp-controller="Libro" asp-action="Active" asp-route-id="@item.IdLibro">Activar</a></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Libro" asp-action="Lista" class="btn btn-primary mb-3">Volver</a>
</div>

<style>
    .enlace {
        display: inline-block;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        text-align: center;
        text-decoration: none;
        vertical-align: middle;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        border-radius: 0.25rem;
    }

        .enlace:hover {
            background-color: #198754;
            color: white !important;
        }
</style>

